# Samay v5 Environment Configuration
# See API_KEYS_GUIDE.md for detailed setup instructions

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=localhost
PORT=8000

# Database
DATABASE_URL=sqlite:///./storage/samay.db

# ðŸ”‘ REQUIRED API KEYS (Get these for full functionality)
# See API_KEYS_GUIDE.md for links and instructions

# Weather API (ESSENTIAL) - Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News API (RECOMMENDED) - Get from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Currency API (RECOMMENDED) - Get from: https://app.exchangerate-api.com/sign-up
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# Geocoding API (RECOMMENDED) - Get from: https://opencagedata.com/api
OPENCAGE_API_KEY=your_opencage_api_key_here

# ðŸ”‘ OPTIONAL API KEYS
# Stock API (OPTIONAL) - Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Local LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
LOCAL_MODEL=phi3:mini

# Browser Automation Settings
CHROME_PROFILE_PATH=./profiles
HEADLESS=false
AUTOMATION_DELAY=1.5

# Security
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/samay.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100/minute