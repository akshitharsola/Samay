# Samay v3 Environment Configuration
# =================================

# Service Credentials
CLAUDE_EMAIL=your-email@gmail.com
GOOGLE_USER=your-email@gmail.com  
GOOGLE_PASS=your-app-password

# Gmail API (for OTP fetching)
GMAIL_CREDENTIALS_PATH=otp_service/secrets/credentials.json
GMAIL_TOKEN_PATH=otp_service/secrets/token.pkl

# Proxy Settings (Optional - Residential proxies recommended)
CLAUDE_PROXY=
GEMINI_PROXY=
PERPLEXITY_PROXY=

# Redis Configuration (Optional - for scaling)
REDIS_HOST=localhost
REDIS_PORT=6379

# Debug Settings
DEBUG_MODE=true
HEADLESS_MODE=false